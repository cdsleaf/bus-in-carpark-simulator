{
  "name": "bus-in-carpark-simulator",
  "version": "1.0.0",
  "description": "The application is a simulation of a robot operated bus moving in a carpark.",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node ./dist/app.js",
    "dev": "nodemon ./src/index.js --exec babel-node",
